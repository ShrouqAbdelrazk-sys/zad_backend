# متغيرات البيئة لنظام تقييم متطوعي مشروع زاد
# Environment Variables for Zad Volunteer Evaluation System

# إعدادات الخادم
NODE_ENV=development
PORT=3000
API_VERSION=v1

# إعدادات قاعدة البيانات
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zad_volunteer_system
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# إعدادات المصادقة
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_2024_zad_project
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_key_change_this_too
JWT_REFRESH_EXPIRES_IN=7d

# إعدادات التشفير
BCRYPT_SALT_ROUNDS=12

# إعدادات معدل الطلبات
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# إعدادات الملفات المرفوعة
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# إعدادات التطبيق
APP_NAME=نظام تقييم متطوعي مشروع زاد
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# إعدادات البريد الإلكتروني (للمراحل المستقبلية)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@zad-project.org

# إعدادات التنبيهات
ALERT_CHECK_INTERVAL=86400000
ENABLE_SMART_ALERTS=true

# إعدادات السجلات
LOG_LEVEL=info
LOG_FILE=logs/app.log

# إعدادات المنطقة الزمنية
TIMEZONE=Africa/Cairo

# إعدادات الأمان
CORS_ORIGIN=http://localhost:3001
COOKIE_SECRET=your_cookie_secret_key_change_this_in_production

# تفعيل وضع التطوير
DEBUG=zad-backend:*